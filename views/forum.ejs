        <div class="forum--create">
            <input type="text" placeholder="Alege un titlu..."/>
            <textarea placeholder="Creează o postare..."></textarea>
            <select>
                <% for(let key in languages){ %>
                <option value="<%= key %>"><%= languages[key][0] %></option>
                <% } %>
            </select>
            <button>Postează</button>
        </div>
