        <div class="forum--posts <%= typeof search !== "undefined" ? "search-mode" : "" %>">
            <% if(posts.length == 0){ %>
            <p class="none">Nu există postări încă.</p>
            <% } %>
            <% for(let i = 0; i < posts.length; i++){ %>
            <a href="/forum?post=<%= posts[i].postid %>">
                <div class="title"><%= posts[i].postTitle %></div>
                <div class="user"><%- utils.profilePicture(posts[i].pictureURL) %> <%= posts[i].username %></div>
                <div class="date"><%= utils.getTimePassed(posts[i].postDate) %></div>
                <div class="info">
                    <% if("language" in posts[i]){ %>
                    <% let lang = utils.postLanguages[posts[i].language]; %>
