        <div></div>
        <textarea name="description" placeholder="Descriere" maxlength="100"><%= settings.description %></textarea>
        <button id="change_desc">Schimbare descriere</button>
        <div></div>
        <input type="url" name="pictureURL" placeholder="URL poză de profil" value="<%= settings.pictureURL %>">
        <div></div>
        <input type="text" name="twitter" placeholder="Twitter username" value="<%= settings.twitterUser %>">
    </main>
